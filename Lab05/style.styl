pd = 30px // padding for divs

body 
    font: 24px Helvetica
    background: #999999


#main 
    min-height: 800px
    margin: 0px
    padding: 0px
    display: flex
    flex-flow: row

/*
Add styles for main. 
*/
#main 
    article
        margin: 1px
        padding: pd
        border: 1px solid #cccc33
        border-radius: 7pt
        background: #dddd88
        flex: 3 1 60%
        font-family: 'Arial'
        order: 2
    nav
        margin: 1px
        padding: pd
        border: 1px solid #8888bb
        border-radius: 7pt
        background: #ccccff
        flex: 1 6 20%
        font-family: 'Lucida Bright'
        text-align: right
        order: 1
    aside 
        margin: 1px
        padding: pd
        border: 1px solid #8888bb
        border-radius: 7pt
        background: #ccccff
        flex: 1 6 20%
        order: 3
        font-style: italic
    

header, footer 
    display: block
    margin: 1px
    padding: pd
    min-height: 100px
    border: 1px solid #eebb55
    border-radius: 7pt
    background: #ffeebb

header
    font-size: 150%
    font-weight: bold

footer
    font-size: 80%


/* Add style for mobile*/
@media all and (max-width: 640px) 
    #main, #page 
        flex-direction: column
    

    #main > nav 
        /* Return them to document order */
        order: 0
        text-align: left
        
    #main > article, aside 
        order: 1
        

    #main > nav, aside, header, footer 
        min-height: 50px
        max-height: 50px
        

